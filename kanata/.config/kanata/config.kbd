(defcfg
  process-unmapped-keys yes
)

(defsrc
  caps a s d w h j u q e r f i
)

(defvar 
  tap-time 150
  hold-time 200
) 

(defalias
  caps_esc_ctrl (multi f24 ( tap-hold $tap-time $hold-time esc lctl ))
  i-navigation (multi f24 (tap-hold $tap-time $hold-time i (layer-toggle navigation)))
)

(deflayer default
  @caps_esc_ctrl a s d w h j u q e r f @i-navigation
)

(deflayer navigation
  _ left down right up bspc del ret home end pgup pgdn _  
)
