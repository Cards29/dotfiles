(defsrc
  caps
  a s d f j k l ;
)

(defalias
  ;; Tap Caps for Esc, Hold for Ctrl
  escctrl (tap-hold 100 100 esc esc)
  
  a_mod (tap-hold 200 200 a lmet)
  s_mod (tap-hold 200 200 s lalt)
  d_mod (tap-hold 200 200 d lsft)
  f_mod (tap-hold 200 200 f lctl)

  j_mod (tap-hold 200 200 j rctl)
  k_mod (tap-hold 200 200 k rsft)
  l_mod (tap-hold 200 200 l ralt)
  semi_mod (tap-hold 200 200 ; rmet)
)

(deflayer default
  @escctrl
  @a_mod @s_mod @d_mod @f_mod @j_mod @k_mod @l_mod @semi_mod
)
